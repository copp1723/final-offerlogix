# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/database

# AI Services
OPENROUTER_API_KEY=sk-or-v1-...
OPENAI_API_KEY=sk-...

# Email Services  
MAILGUN_API_KEY=key-...
MAILGUN_DOMAIN=mg.example.com
MAILGUN_FROM_EMAIL=sender@mg.example.com
MAILGUN_WEBHOOK_SIGNING_KEY=key-...

# Gmail Configuration (for email monitoring)
GMAIL_EMAIL=your-email@gmail.com
GMAIL_PASSWORD=your-app-password

# SMS Services
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1...

# Supermemory Integration
SUPERMEMORY_API_KEY=your-supermemory-api-key
SUPERMEMORY_RAG=on

# Application Configuration
NODE_ENV=development
EMAIL_TEMPLATE_COUNT=30
ENABLE_AGENTS=true

# Auto Response Control
DISABLE_AUTO_RESPONSES=false # Set to true to disable AI auto-responses (useful for testing)

# Default send window for campaign emails (optional)
# JSON string, e.g. {"tz":"America/Chicago","start":"08:00","end":"19:00"}
DEFAULT_SEND_WINDOW=

# Fallback for handover when campaign lacks recipient
DEFAULT_HANDOVER_RECIPIENT=

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random
JWT_ACCESS_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
SKIP_AUTH=false # Set to true to bypass auth in dev/test environments

# Security Configuration
SECURITY_ENABLED=true

# UI Feature Flags (Frontend)
VITE_ENABLE_V2_UI=false
RATE_LIMITING_ENABLED=true
API_KEY_ENCRYPTION_KEY=your-api-key-encryption-secret-32-chars-min
ATTACK_PROTECTION_ENABLED=true
IP_BLACKLISTING_ENABLED=false
IP_WHITELISTING_ENABLED=false

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_UPLOAD_MAX=10
RATE_LIMIT_AI_MAX=20

# Route-specific Rate Limits
PREVIEW_RATE_LIMIT=5
SEND_RATE_LIMIT=3
WEBHOOK_RATE_LIMIT=20

# Payload Limits
API_BODY_LIMIT=1mb
WEBHOOK_BODY_LIMIT=256kb

# Security Headers
SECURITY_CSP_ENABLED=true
SECURITY_HSTS_ENABLED=true
SECURITY_CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
SECURITY_LOG_ENABLED=true
SECURITY_LOG_FILE=./logs/security.log

# Enhanced Logging Options
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_MAX_FILES=30d
LOG_PERFORMANCE_METRICS=true
LOG_DEBUG_MODE=false

# Intent-based Handover System
DEFAULT_HANDOVER_RECIPIENT=sales@example.com

