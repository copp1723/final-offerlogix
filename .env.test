# Test environment variables
NODE_ENV=test

# Test Database Configuration
# Replace with your test database URL
DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/mailmind_test

# Test API Configuration
API_BASE_URL=http://localhost:3000
TEST_PORT=3001

# Mock Service Configuration
MOCK_EXTERNAL_APIS=true
MOCK_EMAIL_SERVICE=true
MOCK_SMS_SERVICE=true

# Test-specific settings
DISABLE_RATE_LIMITING=true
ENABLE_TEST_MODE=true

# Mock API Keys (use fake keys for testing)
OPENAI_API_KEY=test_openai_key
MAILGUN_API_KEY=test_mailgun_key
TWILIO_ACCOUNT_SID=test_twilio_sid
TWILIO_AUTH_TOKEN=test_twilio_token

# Test file paths
TEST_CSV_UPLOADS_PATH=./tests/fixtures/uploads
TEST_LOGS_PATH=./tests/fixtures/logs

# Security (use test values)
JWT_SECRET=test_jwt_secret_key_for_testing_only
SESSION_SECRET=test_session_secret_for_testing_only

# Feature flags for testing
ENABLE_FEATURE_X=true
ENABLE_FEATURE_Y=false