services:
  - type: web
    name: offerlogix-app
    env: node
    plan: starter
    buildCommand: NPM_CONFIG_PRODUCTION=false npm ci && npm run build:render
    preDeployCommand: npm run db:push
    startCommand: npm start
    region: oregon
    envVars:
      - key: NODE_ENV
        value: production
      - key: SKIP_AUTH
        value: false
      - key: DATABASE_URL
        fromDatabase:
          name: offerlogix-postgres
          property: connectionString
      - key: MAILGUN_API_KEY
        sync: false
      - key: MAILGUN_DOMAIN
        value: mg.offerlogix.com
      - key: MAILGUN_FROM_EMAIL
        value: agent@mg.offerlogix.com
      - key: OPENROUTER_API_KEY
        sync: false
      - key: OPENAI_API_KEY
        sync: false
      - key: TWILIO_ACCOUNT_SID
        sync: false
      - key: TWILIO_AUTH_TOKEN
        sync: false
      - key: TWILIO_PHONE_NUMBER
        sync: false
      - key: SUPERMEMORY_API_KEY
        sync: false
      - key: JWT_SECRET
        generateValue: true
      - key: SESSION_SECRET
        generateValue: true
      - key: API_KEY_ENCRYPTION_KEY
        generateValue: true
      - key: DISABLE_AUTO_RESPONSES
        value: false
      - key: ENABLE_AGENTS
        value: true
      - key: DEFAULT_HANDOVER_RECIPIENT
        value: sales@offerlogix.com
      - key: IMAP_HOST
        value: imap.gmail.com
      - key: IMAP_USER
        sync: false
      - key: IMAP_PASSWORD
        sync: false
      - key: GMAIL_EMAIL
        sync: false
      - key: GMAIL_PASSWORD
        sync: false
      - key: REDIS_URL
        fromService:
          type: redis
          name: offerlogix-redis
          property: connectionString
      - key: RATE_LIMITING_ENABLED
        value: true
      - key: SECURITY_ENABLED
        value: true
      - key: LOG_LEVEL
        value: info
      - key: CLIENT_URL
        value: https://offerlogix-app.onrender.com
      - key: API_BASE_URL
        value: https://offerlogix-app.onrender.com
    healthCheckPath: /api/health

  - type: redis
    name: offerlogix-redis
    plan: starter

databases:
  - name: offerlogix-postgres
    databaseName: offerlogix_db
    user: offerlogix_user
    plan: starter