{
  "name": "offerlogix-v2",
  "version": "2.0.0-alpha",
  "description": "OfferLogix V2 - Lean Conversation Engine",
  "scripts": {
    "db:migrate": "psql $DATABASE_URL -f migrations/0001_v2_schema.sql",
    "db:seed": "psql $DATABASE_URL -f migrations/0002_seed_data.sql",
    "db:migrate:all": "node scripts/run-v2-migrations.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "drizzle:push": "drizzle-kit push:pg --config=drizzle.config.ts",
    "drizzle:generate": "drizzle-kit generate:pg --config=drizzle.config.ts",
    "test": "jest --testNamePattern=db",
    "test:watch": "jest --watch --testNamePattern=db",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "drizzle-orm": "latest",
    "postgres": "latest"
  },
  "devDependencies": {
    "@types/jest": "latest",
    "drizzle-kit": "latest",
    "jest": "latest",
    "typescript": "latest"
  }
}
